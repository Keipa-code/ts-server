{% extends 'layout.twig' %}

{% block contents %}
    <div class="container">
        <div class="row justify-content-md-center">
            <h1 class="col-3 g-2">{{ head }}</h1>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-md-center">
            <form class="col-3" action="{{ '/v1/manage/update' }}" method="post">
                <div class="form-group mb-3">
                    <label for="phonenumber" class="form-label">Номер телефона</label>
                    <input type="text" class="form-control" name="phonenumber" value="{{ rows.phonenumber }}"
                           id="phonenumber">
                </div>
                <div class="form-group mb-3">
                    <label for="organizationName" class="form-label">Название организации</label>
                    <input type="text" class="form-control" name="organizationName" value="{{ rows.organizationName }}"
                           id="organizationName">
                </div>
                <div class="form-group mb-3">
                    <label for="departmentName" class="form-label">Отдел</label>
                    <input type="text" class="form-control" name="departmentName" value="{{ rows.departmentName }}" id="departmentName">
                </div>
                <div class="form-group mb-3">
                    <label for="country" class="form-label">Страна</label>
                    <input type="text" class="form-control" name="country" value="{{ rows.country }}"
                           id="country">
                </div>
                <div class="form-group mb-3">
                    <label for="city" class="form-label">Город</label>
                    <input type="text" class="form-control" name="city" value="{{ rows.city }}"
                           id="city">
                </div>
                <div class="form-group mb-3">
                    <label for="street" class="form-label">Улица</label>
                    <input type="text" class="form-control" name="street" value="{{ rows.street }}"
                           id="street">
                </div>
                <div class="form-group mb-3">
                    <label for="houseNumber" class="form-label">Номер дома/здания</label>
                    <input type="text" class="form-control" name="houseNumber" value="{{ rows.houseNumber }}"
                           id="houseNumber">
                </div>
                <div class="form-group mb-3">
                    <label for="floatNumber" class="form-label">Номер квартиры/кабинета</label>
                    <input type="text" class="form-control" name="floatNumber" value="{{ rows.floatNumber }}" id="floatNumber">
                </div>
                <input type="hidden" name="id" value="{{ rows.id }}">
                <input type="hidden" name="type" value="{{ type }}">
                <button type="submit" class="btn btn-success">Обновить</button>
                <button type="submit" class="btn btn-danger" formaction="{{ '/v1/manage/remove' }}">Удалить</button>
            </form>
        </div>
    </div>

{% endblock %}