{% extends 'index.twig' %}

{% block list %}


    <div class="container">
        <table class="table table-striped table-hover table-bordered">
            <thead>
            <tr>
                <th class="col-2" scope="col"><a href="{{ numberSort }}">Номер телефона</a></th>
                <th scope="col"><a href="{{ nameSort }}">Информация об абоненте</a></th>
            </tr>
            </thead>
            <tbody>
            {% for row in list %}
                <tr>
                    <th>{{ row.phonenumber }}</th>
                    <td>{{ row.rowValue }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

    <div class="container">
        {% macro pagination(total, current, url, nearbyPagesLimit = 4) %}
            {% apply spaceless %}
                {% if total > 1 %}
                    <div class="row">
                        <div class="col">
                            <div class="pagination">
                                {% if current > 1 %}
                                    <a class="prev page-numbers" href="{{ (url ~ (current-1))|e }}">Prev</a>
                                {% endif %}

                                {% for i in 1..total %}
                                    {% if 0 == (current - nearbyPagesLimit) - loop.index %}
                                        <li class="page-item"><a class="page-link" href="{{ (url ~ 1)|e }}">1</a></li>
                                        {% if 1 != loop.index %}
                                            <span class="page-numbers">...</span>
                                        {% endif %}
                                    {% elseif 0 == (current + nearbyPagesLimit) - loop.index  and (current + nearbyPagesLimit) < total %}
                                        <span class="page-numbers">...</span>
                                    {% elseif 0 < (current - nearbyPagesLimit) - loop.index %}
                                    {% elseif 0 > (current + nearbyPagesLimit) - loop.index %}
                                    {% else %}
                                        {% if current == loop.index %}
                                            <li class="page-item active" aria-current="page"><a class="page-link"
                                                                                                href="">{{ loop.index }}</a>
                                            </li>
                                        {% else %}
                                            <li class="page-item"><a class="page-link"
                                                                     href="{{ url ~ loop.index }}">{{ loop.index }}</a>
                                            </li>
                                        {% endif %}

                                    {% endif %}
                                {% endfor %}
                                {% if current != total  and (current + nearbyPagesLimit) < total %}
                                    <li class="page-item"><a class="page-link"
                                                             href="{{ (url ~ total)|e }}">{{ total }}</a></li>
                                {% endif %}
                                {% if current < total %}
                                    <li class="page-item"><a class="page-link" aria-label="Next"
                                                             href="{{ (url ~ (current+1))|e }}">Next</a></li>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endapply %}
        {% endmacro %}

        {{ _self.pagination(total, current, url) }}
    </div>

{% endblock %}

