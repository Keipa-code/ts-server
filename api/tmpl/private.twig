{% extends 'layout.twig' %}

{% block contents %}
    <div class="container">
        <div class="row justify-content-md-center">
            <h1 class="col-3 g-2">{{ head }}</h1>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-md-center">
            <form class="col-3" action="{{ '/v1/manage/update' }}" method="post">
                <div class="form-group mb-3">
                    <label for="phonenumber" class="form-label">Номер телефона</label>
                    <input type="text" class="form-control" name="phonenumber" value="{{ rows.phonenumber }}"
                           id="phonenumber">
                </div>
                <div class="form-group mb-3">
                    <label for="firstname" class="form-label">Имя</label>
                    <input type="text" class="form-control" name="firstname" value="{{ rows.firstname }}"
                           id="firstname">
                </div>
                <div class="form-group mb-3">
                    <label for="surname" class="form-label">Фамилия</label>
                    <input type="text" class="form-control" name="surname" value="{{ rows.surname }}" id="surname">
                </div>
                <div class="form-group mb-3">
                    <label for="patronymic" class="form-label">Отчество</label>
                    <input type="text" class="form-control" name="patronymic" value="{{ rows.patronymic }}"
                           id="patronymic">
                </div>
                <input type="hidden" name="id" value="{{ rows.id }}">
                <input type="hidden" name="type" value="{{ type }}">
                <button type="submit" class="btn btn-success">Обновить</button>
                <button type="submit" class="btn btn-danger" formaction="{{ '/v1/manage/remove' }}">Удалить</button>
            </form>
        </div>
    </div>

{% endblock %}